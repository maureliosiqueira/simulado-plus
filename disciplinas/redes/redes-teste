<body>
    <h1>Teste de Redes - Simulado Plus</h1>

    <!-- Quest√£o 1 -->
    <div class="questao">
        <p>1. HTTP opera na camada de transporte?</p>
        <div class="alternativas">
            <p onclick="marcar(this, false, 1)">a) Certo</p>
            <p onclick="marcar(this, true, 1)">b) Errado</p>
        </div>
    </div>

    <!-- Quest√£o 2 -->
    <div class="questao">
        <p>2. DNS usa apenas TCP?</p>
        <div class="alternativas">
            <p onclick="marcar(this, false, 2)">a) Certo</p>
            <p onclick="marcar(this, true, 2)">b) Errado</p>
        </div>
    </div>

    <button class="btn" onclick="finalizarSimulado()">Finalizar Simulado (for√ßar)</button>

    <div id="resultado" style="margin-top: 20px; font-weight: bold;"></div>

    <script>
        let acertos = 0;
        let totalQuestoes = 2;
        let questoesRespondidas = new Set();

        function marcar(elemento, estaCerto, questaoId) {
            if (questoesRespondidas.has(questaoId)) return;

            if (estaCerto) {
                acertos++;
                elemento.style.backgroundColor = '#d4edda';
            } else {
                elemento.style.backgroundColor = '#f8d7da';
            }

            questoesRespondidas.add(questaoId);
            console.log("Acertos:", acertos, "Respondidas:", questoesRespondidas.size);

            if (questoesRespondidas.size === totalQuestoes) {
                finalizarSimulado();
            }
        }

        function finalizarSimulado() {
            const percentual = Math.round((acertos / totalQuestoes) * 100);
            document.getElementById('resultado').innerText = 
                `Voc√™ acertou ${acertos} de ${totalQuestoes} (${percentual}%)`;
            
            if (percentual >= 80) {
                alert("üéâ Parab√©ns! Voc√™ se destacou!");
            } else {
                alert(`Voc√™ acertou ${percentual}%. Continue estudando!`);
            }
        }

        // Reset ao carregar
        window.onload = () => {
            acertos = 0;
            questoesRespondidas.clear();
            document.getElementById('resultado').innerText = '';
        };
    </script>
</body>
