    <script>
        let acertos = 0;
        let totalQuestoes = 10; // ajuste conforme o n√∫mero real
        let questoesRespondidas = new Set();

        function marcar(elemento, estaCerto, questaoId) {
            if (questoesRespondidas.has(questaoId)) return;

            const alternativas = elemento.parentElement.querySelectorAll('p');
            alternativas.forEach(el => {
                el.style.fontWeight = 'normal';
                el.style.backgroundColor = '#f8f9fa';
                el.style.borderColor = '#e9ecef';
            });

            if (estaCerto) {
                elemento.classList.add('alternativa-certa');
                acertos++;
            } else {
                elemento.classList.add('alternativa-errada');
            }

            questoesRespondidas.add(questaoId);

            const gabarito = elemento.parentElement.nextElementSibling;
            const comentario = gabarito.nextElementSibling;
            gabarito.style.display = 'block';
            comentario.style.display = 'block';

            if (questoesRespondidas.size === totalQuestoes) {
                setTimeout(() => finalizarSimulado(), 1000);
            }
        }

        function finalizarSimulado() {
            const percentual = Math.round((acertos / totalQuestoes) * 100);
            document.getElementById('pontuacaoFinal').innerText = `${acertos} de ${totalQuestoes} (${percentual}%)`;

            if (percentual >= 80) {
                document.getElementById('recompensaModal').style.display = 'flex';
            } else {
                alert(`Voc√™ acertou ${acertos} de ${totalQuestoes} (${percentual}%).\nContinue estudando!`);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.gabarito, .comentario').forEach(el => el.style.display = 'none');
            acertos = 0;
            questoesRespondidas.clear();
        });
    </script>
